<section>
  <form action="/products" method="post">
    <fieldset>
      <legend>Add a product:</legend>

      <label for="product_name">Product name:</label>
      <input name="product_name" type="text" placeholder="Product name">

      <label for="product_amount">Product amount:</label>
      <input name="product_amount" type="text" placeholder="Product amount">
    </fieldset>

    <button type="submit">Add product</button>
    <button type="reset">Clear form</button>
  </form>
</section>
<section>
  <h2>List of Products</h2>

  <% if @products.any?() %>
  <dl>
    <% @products.each do |product| %>
    <dt><a href="/products/<%= product.id() %>"><%= product.name %></a></dt>
    <dd>$<%= product.amount %></dd>
    <% end %>
  </dl>
  <% else %>
  <p>You don't have any products!</p>
  <% end %>
</section>
